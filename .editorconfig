# 表明是最顶层的配置文件，发现设为true时，才会停止查找.editorconfig文件
root = true

# 匹配除/之外的任意字符
[*]

# 文件的charset。有以下几种类型：latin1, utf-8, utf-8-bom, utf-16be, utf-16le
charset = utf-8

# 缩进使用tab或者space
indent_style = space

# 缩进为space时，缩进的字符数
indent_size = 4

# 是否将行尾空格自动删除
trim_trailing_whitespace = true

# 换行符的类型。lf, cr, crlf三种
# win用crlf，linux/unix用lf，mac用cr
end_of_line = lf

# 是否使文件以一个空白行结尾
insert_final_newline = true
